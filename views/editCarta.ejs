<%- include ( './partials/head' ); %>
    <!--ESTILOS PROPIOS-->

    <link rel="stylesheet" href="/css/estilos.css">
    </head>

    <body class="">
        <%- include ( './partials/header' ); %>
            <%- include ( './partials/contacto' ); %>

                <form class="container mt-5 " id="formularioAltaCarta" action="/editCarta/<%= carta.idCartas%>"
                    method="POST" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="nombre">Nombre Carta</label>
                            <input type="nombre" class="form-control" id="nombre" placeholder="nombre" name="nombre"
                                value="<%=carta.carta%>">
                        </div>
                        <div class="form-group  col-md-6">
                            <label for="precio">Precio</label>
                            <input type="number" class="form-control" id="precio" placeholder="precio" name="precio"
                                value="<%=carta.precio%>">
                        </div>
                        <div class="form-group  col-md-6">
                            <label for="stock">Stock</label>
                            <input type="number" class="form-control" id="stock" placeholder="stock" name="stock"
                                value="<%=carta.stock%>">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="contacto">Contacto</label>
                            <input type="text" class="form-control" id="contacto" placeholder="contacto" name="contacto"
                                value="<%=carta.contacto%>">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="descripcion">Caracteristicas de la carta</label>
                            <textarea name="descripcion" id="descripcion" cols="30"
                                rows="2"><%=carta.descripcion%></textarea>
                        </div>
                        <div class="form-group  col-4 ">
                            <label for="imagen">Imagen de la carta:</label>
                            <img class="carta " src="/img/<%=carta.imagen%>">
                            <input type="file" name="imagen" id="imagen" <% if(typeof carta.imagen=='undefined' )
                                {%> required <%}%>/>
                                <label for="imagen" style="color: red;" class="errorImagen errorescreate"></label>
                                <% if(typeof carta.imagen !='undefined' ) {%> <input type="hidden"
                                        name="imagenOriginal" value="<%= carta.imagen%>">
                                    <%}%>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Agregar</button>
                </form>
                
                <%- include ( './partials/footer' ); %>