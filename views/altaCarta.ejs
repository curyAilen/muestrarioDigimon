<form class="container mt-5 " id="formularioAltaCarta"  enctype="multipart/form-data" action="/" 
method="post"  >
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="nombre">Nombre Carta</label>
            <input type="nombre" class="form-control" id="nombre" placeholder="nombre" name="nombre" value="Nombre del digimon">
        </div>        
        <div class="form-group  col-md-6">
            <label for="precio">Precio</label>
            <input type="number" class="form-control" id="precio" placeholder="precio" name="precio" value="15">
        </div>
        <div class="form-group  col-md-6">
            <label for="stock">Stock</label>
            <input type="number" class="form-control" id="stock" placeholder="stock" name="stock" value="2">
        </div>
        <div class="form-group  col-md-6">
            <label for="edicion">Edici√≥nn</label>
